        <script src="jquery.min.js"></script>
        <script>
        $(document).ready(function() {
            $('#galleryImages img').each(function(i) {
                var imgFile = $(this).attr('src');
                var preloadImage = new Image();
                preloadImage.src = imgFile.replace('_small_bw.jpg','_small.jpg');
                    
                $(this).mouseover(function() {
                        $(this).attr('src', preloadImage.src);
                    }); // end mouseover
                $(this).mouseout(function() {
                    $(this).attr('src', imgFile);
                }); // end mouseover
            }); // end each
                
            $('#galleryImages a').click(function(evt) {
                    evt.preventDefault();
                    var imgPath = $(this).attr('href');
                    var oldImage = $('#focusPhoto img');
                    var newImage = $('<img src="' + imgPath + '">');
                    newImage.hide();
                    $('#focusPhoto').prepend(newImage);
                    newImage.fadeIn(1000);
                    oldImage.fadeOut(1000,function(){
                            $(this).remove();
                    }); // end fadeout
            }); // end click
            $('#galleryImages a:first').click();
            }); // end ready
        </script>
    </head>

